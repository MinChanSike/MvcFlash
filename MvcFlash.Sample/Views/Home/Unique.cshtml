@{
	ViewBag.Title = "Unique";
}
<h1>Unique Flashing</h1>
<p>This is a nice feature if you want to make sure that a message is only displayed once. This allows you to use flash in action attributes and not have to worry about accidently displaying the same message multiple times.</p>
<div class="section">
	<h2>In The Controller</h2>
	<pre class="brush: csharp;">
        public ActionResult Index()
        {
			for (int i = 0; i < 10; i++) {
				Flash.Unique("success").Success("only display once");
			}

			return View();
        }
    </pre>
</div>
<div class="section">
	<h2>In The View</h2>
	<pre class="brush: csharp;">
        @@Html.Flash()
    </pre>
</div>
<div class="section">
	<h2>Result</h2>
	@Html.Flash()
</div>
